---
permalink: /tags/
layout: layouts/home.njk
---
<h1>Tags</h1>

<ul>
  {% for tag, count in collections.tagList %}
    {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li>
      <strong>
        <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      </strong>
      {{ count }} post{% if count > 1 %}s{% endif %}
    </li>
  {% endfor %}
</ul>